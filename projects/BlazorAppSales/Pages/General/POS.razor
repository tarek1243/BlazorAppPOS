{
    <OrderPage orderIdx='@CurrentOrder.Id.ToString()' @ref="orderPage1"></OrderPage>
}*@




@code {

    string selectedTagFilter = "";
    private void OnChange_selectedTagFilter(string selected)
    {
        selectedTagFilter = selected;
        Search();
    }
}